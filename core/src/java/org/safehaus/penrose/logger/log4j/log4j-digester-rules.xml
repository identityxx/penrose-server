<digester-rules>

	<pattern value="log4j:configuration">

        <set-properties-rule />

        <pattern value="appender">

            <object-create-rule classname="org.safehaus.penrose.logger.log4j.AppenderConfig" />
            <set-properties-rule>
                <alias attr-name="class" prop-name="appenderClass" />
            </set-properties-rule>

            <pattern value="layout">

                <object-create-rule classname="org.safehaus.penrose.logger.log4j.LayoutConfig" />
                <set-properties-rule>
                    <alias attr-name="class" prop-name="layoutClass" />
                </set-properties-rule>

                <pattern value="param">
                    <call-method-rule methodname="setParameter" paramcount="2" />
                    <call-param-rule attrname="name" paramnumber="0"/>
                    <call-param-rule attrname="value" paramnumber="1"/>
                </pattern>

                <set-next-rule methodname="setLayoutConfig" />

            </pattern>

            <set-next-rule methodname="addAppenderConfig" />

        </pattern>

        <pattern value="logger">

            <object-create-rule classname="org.safehaus.penrose.logger.log4j.LoggerConfig" />
            <set-properties-rule/>

            <pattern value="level">
                <call-method-rule methodname="setLevel" paramcount="1" />
                <call-param-rule attrname="value" paramnumber="0"/>
            </pattern>

            <pattern value="appender-ref">
                <call-method-rule methodname="addAppender" paramcount="1" />
                <call-param-rule attrname="ref" paramnumber="0"/>
            </pattern>

            <set-next-rule methodname="addLoggerConfig" />

        </pattern>

        <pattern value="root">

            <object-create-rule classname="org.safehaus.penrose.logger.log4j.RootConfig" />
            <set-properties-rule/>

            <pattern value="level">
                <call-method-rule methodname="setLevel" paramcount="1" />
                <call-param-rule attrname="value" paramnumber="0"/>
            </pattern>

            <set-next-rule methodname="setRootConfig" />

        </pattern>

	</pattern>

</digester-rules>
