<digester-rules>

	<pattern value="server">

        <set-properties-rule/>

        <!-- system property -->
        <pattern value="system-property">
            <call-method-rule methodname="setSystemProperty" paramcount="2" />
            <call-param-rule pattern="property-name" paramnumber="0"/>
            <call-param-rule pattern="property-value" paramnumber="1"/>
        </pattern>

        <!-- property -->
        <pattern value="property">
            <call-method-rule methodname="setProperty" paramcount="2" />
            <call-param-rule pattern="property-name" paramnumber="0"/>
            <call-param-rule pattern="property-value" paramnumber="1"/>
        </pattern>

        <!-- service -->
        <pattern value="service">
            <object-create-rule classname="org.safehaus.penrose.service.ServiceConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="service-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="service-class" methodname="setServiceClass" paramcount="0" />
            <call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
            <pattern value="parameter">
                <call-method-rule methodname="setParameter" paramcount="2" />
                <call-param-rule pattern="param-name" paramnumber="0"/>
                <call-param-rule pattern="param-value" paramnumber="1"/>
            </pattern>
            <set-next-rule methodname="addServiceConfig" />
        </pattern>

        <!-- schema -->
        <pattern value="schema">
            <object-create-rule classname="org.safehaus.penrose.schema.SchemaConfig" />
            <set-properties-rule/>
            <set-next-rule methodname="addSchemaConfig" />
        </pattern>

		<!-- interpreter -->
		<pattern value="interpreter">
			<object-create-rule classname="org.safehaus.penrose.interpreter.InterpreterConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="interpreter-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="interpreter-class" methodname="setInterpreterClass" paramcount="0" />
			<call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
			<pattern value="parameter">
				<call-method-rule methodname="setParameter" paramcount="2" />
				<call-param-rule pattern="param-name" paramnumber="0"/>
				<call-param-rule pattern="param-value" paramnumber="1"/>
			</pattern>
			<set-next-rule methodname="addInterpreterConfig" />
		</pattern>

        <!-- session -->
        <pattern value="session">
            <object-create-rule classname="org.safehaus.penrose.session.SessionConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
            <pattern value="parameter">
                <call-method-rule methodname="setParameter" paramcount="2" />
                <call-param-rule pattern="param-name" paramnumber="0"/>
                <call-param-rule pattern="param-value" paramnumber="1"/>
            </pattern>
            <set-next-rule methodname="setSessionConfig" />
        </pattern>

        <!-- handler -->
        <pattern value="handler">
            <object-create-rule classname="org.safehaus.penrose.handler.HandlerConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="handler-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="handler-class" methodname="setHandlerClass" paramcount="0" />
            <call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
            <pattern value="parameter">
                <call-method-rule methodname="setParameter" paramcount="2" />
                <call-param-rule pattern="param-name" paramnumber="0"/>
                <call-param-rule pattern="param-value" paramnumber="1"/>
            </pattern>
            <set-next-rule methodname="addHandlerConfig" />
        </pattern>

		<!-- engine -->
		<pattern value="engine">
			<object-create-rule classname="org.safehaus.penrose.engine.EngineConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="engine-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="engine-class" methodname="setEngineClass" paramcount="0" />
			<call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
			<pattern value="parameter">
				<call-method-rule methodname="setParameter" paramcount="2" />
				<call-param-rule pattern="param-name" paramnumber="0"/>
				<call-param-rule pattern="param-value" paramnumber="1"/>
			</pattern>
			<set-next-rule methodname="addEngineConfig" />
		</pattern>

        <!-- connector -->
        <pattern value="connector">
            <object-create-rule classname="org.safehaus.penrose.connector.ConnectorConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="connector-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="connector-class" methodname="setConnectorClass" paramcount="0" />
            <call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
            <pattern value="parameter">
                <call-method-rule methodname="setParameter" paramcount="2" />
                <call-param-rule pattern="param-name" paramnumber="0"/>
                <call-param-rule pattern="param-value" paramnumber="1"/>
            </pattern>
            <set-next-rule methodname="setConnectorConfig" />
        </pattern>

		<!-- adapter -->
		<pattern value="adapter">
			<object-create-rule classname="org.safehaus.penrose.adapter.AdapterConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="adapter-name" methodname="setName" paramcount="0" />
            <call-method-rule pattern="adapter-class" methodname="setAdapterClass" paramcount="0" />
			<call-method-rule pattern="description" methodname="setDescription" paramcount="0" />
			<set-next-rule methodname="addAdapterConfig" />
		</pattern>

        <!-- partition -->
        <pattern value="partition">
            <object-create-rule classname="org.safehaus.penrose.partition.PartitionConfig" />
            <set-properties-rule/>
            <call-method-rule pattern="handler-name" methodname="setHandlerName" paramcount="0" />
            <call-method-rule pattern="engine-name" methodname="setEngineName" paramcount="0" />
            <set-next-rule methodname="addPartitionConfig" />
        </pattern>

		<!-- root -->
		<pattern value="root">
            <object-create-rule classname="org.safehaus.penrose.user.UserConfig" />
			<set-properties-rule/>
            <call-method-rule pattern="root-dn" methodname="setDn" paramcount="0" />
            <call-method-rule pattern="root-password" methodname="setPassword" paramcount="0" />
            <set-next-rule methodname="setRootUserConfig" />
		</pattern>
	</pattern>

</digester-rules>